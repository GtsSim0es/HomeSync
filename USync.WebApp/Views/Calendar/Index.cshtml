@{
    ViewData["Title"] = "Privacy Policy";
}

<link rel="stylesheet" type="text/css" href="~/css/evo-calendar.css" />
<link rel="stylesheet" type="text/css" href="~/css/evo-calendar.midnight-blue.css" />

<h1>@ViewData["Title"]</h1>

<div id="calendar"></div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="~/js/evo-calendar.js"></script>

<script>
    let today = new Date();

    let event = {
        id: "imwyx6S",
        name: "teste de evento",
        description: "Lorem ipsum dolor sit amet.",
        date: "4/23/2024",
        type: "event"
    };

    $('#calendar').evoCalendar({
        'language': 'pt'
    });

    $("#calendar").evoCalendar("addCalendarEvent", event);
</script>


<form action="@Url.Action("CreateCalendarEvent", "Calendar")" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" class="form-control" id="Description" name="Description" />
    </div>
    <div class="form-group">
        <label for="DateOfEvent">DateOfEvent:</label>
        <input type="datetime" class="form-control" id="DateOfEvent" name="DateOfEvent" />
    </div>
    <button type="submit" class="btn btn-primary">AddEvent</button>
</form>

